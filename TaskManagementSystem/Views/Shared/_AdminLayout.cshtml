@*@model TaskManagementSystem.Models.Employee*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Task Management System</title>
    <link href="~/Styles/SharedMasterStyles.css" rel="stylesheet" />
</head>
<body>
    <div id="projectContainer">
        <div id="collapseBtn">&#x2190;</div>
        <div id="projectName">Task Management System</div>
        <a id="logoutLink" href="@Url.Action("Logout", "Account", new { area = "" })">Logout</a>
    </div>

    <div id="sidebar">
        <div id="userInfo" style="background-color: #007bff; color: white; padding: 10px;">
            User:
        </div>
        <ul>
            <li><a href="@Url.Action("Index", "Homepage")">Home</a></li>
            <li class="has-subitems">
                <a>Project Management</a>
                <ul>
                    <li><a href="@Url.Action("Create", "Project")">Create Project</a></li>
                    <li><a href="@Url.Action("AddEmployeetoTheProject", "Project")">Manage Projects</a></li>
                    <li><a href="@Url.Action("Manage", "Project")">View Projects</a></li>
                </ul>
            </li>
            <li class="has-subitems">
                <a>Task Management</a>
                <ul>
                    <li><a href="@Url.Action("Create", "Task")">Create Task</a></li>
                    <li><a href="@Url.Action("Manage", "Task")">View Tasks</a></li>
                </ul>
            </li>
            <li class="has-subitems">
                <a>Employee Management</a>
                <ul>
                    <li><a href="@Url.Action("AddEmployee", "Employee")">Add Employee</a></li>
                    <li><a href="@Url.Action("Manage", "Employee")">View Employee</a></li>
                </ul>
            </li>
            <li class="has-subitems">
                <a>Client</a>
                <ul>
                    <li><a href="@Url.Action("Create", "Client")">Add Client</a></li>
                    <li><a href="@Url.Action("Manage", "Client")">View Clients</a></li>
                </ul>
            </li>

            <li class="has-subitems">
                <a>Role Management</a>
                <ul>
                    <li><a href="@Url.Action("AddRole", "Role")">Add a Role</a></li>
                    <li><a href="@Url.Action("AssignRole", "Role")">Assign Role</a></li>
                </ul>
            </li>

            <li class="has-subitems">
                <a>View Reports(Read Only)</a>
                <ul>
                    <li><a href="@Url.Action("CurrentProjects", "Report")">Projects</a></li>
                    <li><a href="@Url.Action("CurrentTasks", "Report")">Tasks</a></li>
                </ul>
            </li>
            <li class="has-subitems">
                <a href="@Url.Action("Index", "Setting")">Settings</a>
            </li>
        </ul>
    </div>

    <div id="content">
        @RenderBody()
    </div>
    <script src="~/JS/Sidebar.js"></script>
</body>
</html>
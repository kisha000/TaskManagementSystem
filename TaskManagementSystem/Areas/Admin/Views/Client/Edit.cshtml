@model TaskManagementSystem.Models.Client

<div class="modal-content">
    <h2>Edit Client</h2>
    @using (Html.BeginForm("Edit", "Client", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.ClientId)

        <div class="form-group">
            @Html.Label("Client Name")
            @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.Label("Contact Person")
            @Html.TextBoxFor(model => model.ContactPerson, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.Label("Email")
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <div class="form-group">
            @Html.Label("Phone Number")
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required", type = "tel" })
        </div>
        <div class="form-group">
            @Html.Label("Address")
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
    }
</div>
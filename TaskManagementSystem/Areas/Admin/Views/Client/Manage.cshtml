@model List<TaskManagementSystem.Models.Client>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Clients</title>
    <link href="~/Styles/TableStyle.css" rel="stylesheet" />
    <link href="~/Styles/ModalStyles.css" rel="stylesheet" />
</head>
@Html.Partial("_ModalMessage")
<body>
    <h1>Clients</h1>
    <input type="text" id="searchInput" placeholder="Search clients...">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Contact Person</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var client in Model)
                {
                    <tr>
                        <td>@client.ClientName</td>
                        <td>@client.ContactPerson</td>
                        <td>@client.Email</td>
                        <td>@client.Phone</td>
                        <td>@client.Address</td>
                        <td class="actions">
                            <a href="@Url.Action("Edit", "Client", new { id = client.ClientId })" class="btn-edit" data-id="@client.ClientId">Edit</a>
                            <a href="@Url.Action("Delete", "Client", new { id = client.ClientId})" class="btn-delete" data-id="@client.ClientId">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="no-records">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="create-link">
        @Html.ActionLink("Add a New Client", "Create", null, new { @class = "btn-create" })
    </div>
    <div id="editClientModal" class="modal">
        <div class="modal-content"></div>
    </div>
    <div id="deleteClientModal" class="modal">
        <div class="modal-content"></div>
    </div>
    <script src="~/JS/Search.js"></script>
    <script>
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", function (e) {
                e.preventDefault();
                const clientId = this.getAttribute("data-id");
                const url = "@Url.Action("Edit", "Client")" + "?id=" + clientId;

                fetch(url)
                    .then(response => response.text())
                    .then(data => {
                        document.querySelector("#editClientModal .modal-content").innerHTML = data;
                        document.getElementById("editClientModal").style.display = "block";
                    });
            });
        });
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", function (e) {
                e.preventDefault();
                const clientId = this.getAttribute("data-id");
                const url = "@Url.Action("Delete", "Client")" + "?id=" + clientId;

                fetch(url)
                    .then(response => response.text())
                    .then(data => {
                        document.querySelector("#deleteClientModal .modal-content").innerHTML = data; 
                        document.getElementById("deleteClientModal").style.display = "block";
                    });
            });
        });

        // Close the modal when clicking outside the modal content
        window.addEventListener("click", function (event) {
            const modal = document.getElementById("editClientModal");
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });
        function closeModal() {
            var modal = document.getElementById('editClientModal');
            modal.style.display = 'none';
        }
        window.addEventListener("click", function (event) {
            const modal = document.getElementById("deleteClientModal");
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });
        function closeModal() {
            var modal = document.getElementById('deleteClientModal');
            modal.style.display = 'none';
        }
    </script>
</body>
</html>
